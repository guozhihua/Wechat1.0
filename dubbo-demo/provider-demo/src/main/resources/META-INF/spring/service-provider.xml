<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="provider-demo" owner="programmer" organization="dubbox"/>

    <dubbo:registry address="zookeeper://101.200.55.143:2181?backup=101.200.55.143:2182,101.200.55.143:2183"/>

      <!--注册中心需要配置才可以启用-->
    <!--<dubbo:monitor protocol="registry"/>-->

    <dubbo:protocol name="dubbo" serialization="kryo" optimizer="com.alibaba.dubbo.demo.SerializationOptimizerImpl" port="9998"/>
    <!-- use tomcat server -->
    <dubbo:protocol name="rest" port="9999" threads="500" contextpath="services" server="tomcat" accepts="500"/>
    <dubbo:service interface="com.test.rpc.UserRestService" protocol="rest" ref="userRest"></dubbo:service>

    <dubbo:annotation package="com.hua.*" />
    <import resource="classpath:conf/spring-config.xml"></import>
    <import resource="classpath:conf/spring-mybatis.xml"></import>
    <!-- 使用注解方式暴露接口 -->
</beans>