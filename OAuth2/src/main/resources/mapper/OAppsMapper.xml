 </update>
  	
<!-- 查询客户端列表 -->
<select id="selectList" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	from o_apps 
	<include refid="Example_Where_Clause"/>
