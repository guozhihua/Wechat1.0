<mapper namespace="com.yj.oauth.dao.OAppsDao" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.yj.oauth.entity.OApps" >
	<result column="id" property="id"/>
	<result column="app_id" property="appId"/>
	<result column="app_secret" property="appSecret"/>
	<result column="app_name" property="appName"/>
	<result column="create_time" property="createTime"/>
	<result column="status" property="status"/>
</resultMap>
       
<!-- o_apps table all fields -->
<sql id="Base_Column_List" >
	 id,app_id,app_secret,app_name,create_time,status
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="id != null and id != ''" >
	    and id =  #{id}
	</if>
	<if test="appId != null and appId != ''" >
	    and app_id =  #{appId}
	</if>
	<if test="appSecret != null and appSecret != ''" >
	    and app_secret =  #{appSecret}
	</if>
	<if test="appName != null and appName != ''" >
	    and app_name =  #{appName}
	</if>
	<if test="createTime != null and createTime != ''" >
	    and create_time =  #{createTime}
	</if>
	<if test="status != null and status != ''" >
	    and status =  #{status}
	</if>
</trim>
</sql>
   
<!-- 根据id查询 客户端 -->
<select id="selectByPrimaryKey"  resultMap="BaseResultMap" parameterType="java.lang.String">
	select <include refid="Base_Column_List" /> 
	 from o_apps where id = #{id}
</select>
<!-- 删除记录 -->
<delete id="deleteByPrimaryKey" parameterType="java.lang.String">
	delete 	 from o_apps where id = #{id}
</delete>
<!-- 插入记录 -->
<insert id="insert" parameterType="com.yj.oauth.entity.OApps" >
  insert into o_apps(id,app_id,app_secret,app_name,create_time,status)
 values(#{id},#{appId},#{appSecret},#{appName},now(),#{status})
</insert>
