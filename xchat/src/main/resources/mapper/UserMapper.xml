<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xchat.dao.UserDao" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="xchat.pojo.User" >
	<result column="user_id" property="userId"/>
	<result column="user_name" property="userName"/>
	<result column="password" property="password"/>
	<result column="real_name" property="realName"/>
	<result column="status" property="status"/>
	<result column="create_time" property="createTime"/>
</resultMap>
       
<!-- user table all fields -->
<sql id="Base_Column_List" >
	 user_id,user_name,password,real_name,status,create_time
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="userId != null and userId != ''" >
	    and user_id =  #{userId}
	</if>
	<if test="userName != null and userName != ''" >
	    and user_name =  #{userName}
	</if>
	<if test="password != null and password != ''" >
	    and password =  #{password}
	</if>
	<if test="realName != null and realName != ''" >
	    and real_name =  #{realName}
	</if>
	<if test="status != null and status != ''" >
	    and status =  #{status}
	</if>
	<if test="createTime != null and createTime != ''" >
	    and create_time =  #{createTime}
	</if>
</trim>
</sql>
   
<!-- 根据id查询 系统用户 -->
<select id="selectByPrimaryKey"  resultMap="BaseResultMap" parameterType="java.lang.String">
	select <include refid="Base_Column_List" /> 
	 from user where user_id = #{userId}
</select>
<!-- 删除记录 -->
<delete id="deleteByPrimaryKey" parameterType="java.lang.String">
	delete 	 from user where user_id = #{userId}
</delete>
<!-- 插入记录 -->
<insert id="insert" parameterType="xchat.pojo.User" >
<selectKey resultType="java.lang.String" order="BEFORE" keyProperty="userId">
	SELECT UUID()
  </selectKey>
  insert into user(user_id,user_name,password,real_name,status,create_time)
 values(#{userId},#{userName},#{password},#{realName},#{status},now())
</insert>
<!-- 插入记录 -->
<insert id="insertSelective" parameterType="xchat.pojo.User" >
<selectKey resultType="java.lang.String" order="BEFORE" keyProperty="userId">
	SELECT UUID()
  </selectKey>
  insert into user
	<trim  prefix="(" suffix=")"  suffixOverrides="," >
	<if test="userId != null  ">
		user_id,
	</if>
	<if test="userName != null  ">
		user_name,
	</if>
	<if test="password != null  ">
		password,
	</if>
	<if test="realName != null  ">
		real_name,
	</if>
	<if test="status != null  ">
		status,
	</if>
	<if test="createTime != null  ">
		create_time,
	</if>
	</trim>
	<trim  prefix="values (" suffix=")"  suffixOverrides="," >
	<if test="userId != null  ">
		#{userId},
	</if>
	<if test="userName != null  ">
		#{userName},
	</if>
	<if test="password != null  ">
		#{password},
	</if>
	<if test="realName != null  ">
		#{realName},
	</if>
	<if test="status != null  ">
		#{status},
	</if>
	<if test="createTime != null  ">
		now(),
	</if>
	</trim>
</insert>
 <!-- 修改记录，只修改只不为空的字段 -->
<update id="updateByPrimaryKeySelective" parameterType="xchat.pojo.User" >
	update user set 
	<trim  suffixOverrides="," >
	<if test="userName != null  ">
		user_name=#{userName},
	</if>
	<if test="password != null  ">
		password=#{password},
	</if>
	<if test="realName != null  ">
		real_name=#{realName},
	</if>
	<if test="status != null  ">
		status=#{status},
	</if>
	<if test="createTime != null  ">
		create_time=#{createTime},
	</if>
	</trim> where user_id=#{userId}
</update>
<!-- 根据id，修改记录-->  
 <update id="updateByPrimaryKey" parameterType="xchat.pojo.User" >
  update user set user_name=#{userName},password=#{password},real_name=#{realName},status=#{status},create_time=now() where user_id=#{userId}
 </update>
  	
<!-- 查询系统用户列表 -->
<select id="selectList" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	from user 
	<include refid="Example_Where_Clause"/>
	<if test="orderByClause != null and orderByClause != ''" >
       order by  ${orderByClause}
    </if>
</select>
  	
</mapper>   
